# Source List
#
KO_MODULE_NAME := snd-soc-pa-fs1815
KO_MODULE_PATH := $(src)
KO_MODULE_SRC  :=

ccflags-y += -I$(KO_MODULE_PATH)
ccflags-y += -I$(KO_MODULE_PATH)/../../../include
ccflags-y += -I$(KO_MODULE_PATH)/../../../../sprd_audio/agdsp_pd

KO_MODULE_SRC += $(wildcard $(KO_MODULE_PATH)/*.c)

#
# Final Objects
#
obj-m := $(KO_MODULE_NAME).o

FS1815_COMMON := \
				fsm_core.o \
				fs1815.o \
				fsm_i2c.o \

$(KO_MODULE_NAME)-y += \
		$(FS1815_COMMON)

